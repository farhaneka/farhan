<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bg">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/bg"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/pf"/>
            </FrameLayout>

            <ImageView
                android:layout_width="130px"
                android:layout_height="130px"
                android:layout_marginLeft="205dp"
                android:layout_marginTop="190dp"
                android:background="@drawable/ic_camera_alt_black_24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="29dp"
                android:background="@drawable/ic_person_black_24dp" />

            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/nama"
                android:drawablePadding="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="40dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farhan Eka Saputra"
                android:textSize="17sp"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="40dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/ic_edit_black_24dp" />

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/ic_info_black_24dp" />

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/informasi"
                android:drawablePadding="20dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="40dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informatich Engineering"
                android:textSize="17sp"
                android:layout_marginTop="105dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="40dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="105dp"
                android:background="@drawable/ic_edit_black_24dp" />

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="151dp"
                android:background="@drawable/ic_call_black_24dp" />

            <TextView
                android:id="@+id/tv_telp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/telephone"
                android:drawablePadding="20dp"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="40dp"
                android:textSize="15sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="085854484357"
                android:textSize="17sp"
                android:layout_marginTop="165dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="40dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>